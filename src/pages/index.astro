---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all categories
const categories = await getCollection('categories');
const sortedCategories = categories.sort((a, b) => {
  if (a.data.order && b.data.order) {
    return a.data.order - b.data.order;
  }
  if (a.data.order) return -1;
  if (b.data.order) return 1;
  return a.data.title.localeCompare(b.data.title);
});

// Get resource counts for each category
const resourceCounts = await Promise.all(
  sortedCategories.map(async (category) => {
    const resources = await getCollection('resources', ({ data }) => data.category === category.slug);
    return {
      ...category,
      resourceCount: resources.length
    };
  })
);
---

<Layout title="selfcare.tech">
  <div class="max-w-6xl mx-auto">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Self-Care Resources</h1>
      <p class="text-white/80 text-lg md:text-xl max-w-2xl mx-auto">
        Choose a category below to explore curated resources for your wellbeing
      </p>
    </div>

    <!-- Category Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {resourceCounts.map((category) => (
        <a href={`/${category.slug}`} class="block group">
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 hover:bg-white/20 transition-all duration-200 h-full">
            <h2 class="text-xl font-bold text-white mb-2 group-hover:text-white/90">
              {category.data.title}
            </h2>
            <p class="text-white/80 text-sm mb-3">
              {category.resourceCount} resource{category.resourceCount !== 1 ? 's' : ''} available
            </p>
            <div class="flex items-center text-white/60 text-sm">
              <span>Explore {category.data.title.toLowerCase()}</span>
              <svg class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
